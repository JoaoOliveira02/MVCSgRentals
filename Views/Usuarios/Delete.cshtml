@model GerenciadorDeEmpresaWEB.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-4">
    <div class="card-header">
        <h4>Confirmar Exclusão</h4>
    </div>
    <div class="card-body">
        <h3>Tem certeza que deseja excluir o usuário: <strong>@Model.Nome</strong>?</h3>
        <p><strong>CPF:</strong> @Model.CPF</p>
        <p><strong>Perfil:</strong> @Model.PerfilUsuarioNome</p>
        <p><strong>Empresa:</strong> @Model.EmpresaNome</p>

        <form asp-action="DeleteConfirmado" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
